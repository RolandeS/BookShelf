

<%= form_for([shelf, book], :remote => true) do |f| %>
<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :link %>
	<%= f.text_field :link %>
</div>
<div class="field">
	<%= f.label :note %>
	<%= f.text_field :note %>
</div>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>