$("#shelf-<%= @shelf.id %>").replaceWith("<%= j(render @shelf)%>");
var carousel = $("#shelf-<%= @shelf.id %> .owl-carousel")

carousel.owlCarousel({
		items : 2,
		navigation : true, 
		navigationText : ["<",">"],
		pagination : false,
		scrollPerPage : false,
		slideSpeed : 300,
	});

$('.open form')[0].reset();

$('.reveal-modal-bg').foundation('reveal', 'close');

var owl = carousel.data('owlCarousel');
owl.goTo(<%= @shelf.books.count %>)