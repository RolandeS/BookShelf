<% if @book.errors.any? %>
  $('#addBookModal_' + <%= @shelf.id %>).find('.bookErrors').html("<%= j(render partial: "/shelves/errors", locals: {object: @book}) %>")
  $(".bookErrors").fadeIn().delay(2300).fadeOut();
  <%@book.errors.clear()%>
  $('.open form')[0].reset();
     
<% else %>
$("#shelf-<%= @shelf.id %>").replaceWith("<%= j(render @shelf)%>");


var carousel = $("#shelf-<%= @shelf.id %> .owl-carousel")

carousel.owlCarousel({
    items : 2,
    navigation : true, 
    navigationText : ["<",">"],
    pagination : false,
    scrollPerPage : false,
    slideSpeed : 300,
  });

$('.open form')[0].reset();

$('.reveal-modal-bg').foundation('reveal', 'close');

var owl = carousel.data('owlCarousel');
owl.goTo(<%= @shelf.books.count %>);

flipInit(".card");

<% end %>










