<!DOCTYPE html>
<html>
<head>
  <title>BookShelf</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p id="notice"><%= flash[:notice] %></p>
<p id="alert"><%= flash[:alert] %></p>

<%= yield %>

<p class="userinfo">
     <% if current_user %>
       Signed in as <%= current_user.first_name.capitalize %>. <%= link_to "Log out", :logout, method: :post %>
     <% else %>
       <%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_path %>
     <% end %>
</p>

</body>
</html>
