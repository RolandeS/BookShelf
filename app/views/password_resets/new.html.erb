<div class="wrapper">
  <div class="loginPage row">
    <h1><span>Reset Your Password</span></h1>
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email, "Please enter your email" %><br />
        <%= text_field_tag :email %> 
        <%= submit_tag "Reset", class: "button tiny" %>
      </div>
    <% end %>
  </div>
</div>