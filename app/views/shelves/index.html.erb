<div class="row">
	<h2>Hey, <%=current_user.first_name.capitalize %></h2>
	<h4>welcome to your bookshelf</h4>
	</br>
	<div class="shelf-list">
		<%= render @shelves if @shelves %>
	</div>
	</br>
	</br>
	<div class='row'>
		<h3>Add a new shelf: </h3>
	</div>
	<div class='row'>
		<%= form_for Shelf.new, :remote => true do |f| %>
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>

			<div class="actions">
				<%= f.submit :submit, class: 'button closeModalSubmit' %>
			</div>
		<% end %>
	</div>
</div>
