<% if @shelf.errors.any? %>
  $('.open #modal-edit-fields').find(".editShelfErrors").html("<%= j(render partial: "errors", locals: {object: @shelf}) %>")
  $('.open #modal-edit-fields').find(".editShelfErrors").fadeIn().delay(2300).fadeOut();
<% else %>
$("#shelf-<%= @shelf.id %>").replaceWith("<%= j(render @shelf)%>");
carouselInit("#shelf-<%= @shelf.id %> .owl-carousel")
flipInit(".card");
$('.reveal-modal-bg').foundation('reveal', 'close');
<%end%>

