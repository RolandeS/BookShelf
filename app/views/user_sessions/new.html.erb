<div class="wrapper">
	<div class="loginPage row">
		<h1><span>Login!</span></h1>
		<%= form_tag user_sessions_path, :method => :post do %>
			<div class="field">
				<%= label_tag :email %>
				<%= text_field_tag :email %>
			</div>
			<div class="field">
				<%= label_tag :password %>
				<%= password_field_tag :password %>
			</div>
			<div class="field">
				<%= label_tag :remember, "Remember Me"%> 
				<%= check_box_tag :remember %></br></br>
			</div>
			<div class="actions">
				<%= submit_tag "LOGIN", class: 'button'%>	
			</div>
		<% end %>

		<h5>New User? <span><%=link_to 'Register Here', root_path%></span> | Forgot Password? <span><%= link_to 'Get a New One', :forgotpassword %></span> </h5>
	</div>
</div>


